  image:
    registry: ~
    defaultRegistry: ~
    repository: artifactory.f1.novartis.net/to-ddi-diu-zephyr-docker/nirmata/cleanup-controller
    tag: v1.13.6-n4k.nirmata.10
    pullPolicy: IfNotPresent

# Reports Controller Configuration
reportsController:
  image:
    registry: ~
    defaultRegistry: ~
    repository: artifactory.f1.novartis.net/to-ddi-diu-zephyr-docker/nirmata/reports-controller
    tag: v1.13.6-n4k.nirmata.10
    pullPolicy: IfNotPresent

# CLI Image Configuration (used in hooks)
cli:
  image:
    registry: ~
    defaultRegistry: ~
    repository: artifactory.f1.novartis.net/to-ddi-diu-zephyr-docker/nirmata/kyverno-cli
    tag: v1.13.6-n4k.nirmata.10
    pullPolicy: IfNotPresent

# Test Configuration
test:
  image:
    registry: ~
    repository: artifactory.f1.novartis.net/to-ddi-diu-zephyr-docker/nirmata/busybox
    tag: "1.35"
